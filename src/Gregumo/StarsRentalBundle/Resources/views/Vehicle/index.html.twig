{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Liste des véhicules</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Couleur</th>
                <th>Gamme</th>
                <th>Disponibilité</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('vehicle_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.color }}</td>
                <td>{{ entity.type.name }}</td>
                <td>
                    {% if entity.isAvailable %}
                        <span class="label label-success">Disponible</span>
                    {% else %}
                        <span class="label label-danger">Indisponible</span>
                    {% endif %}

                </td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('vehicle_show', { 'id': entity.id }) }}">Voir</a>
                    </li>
                    <li>
                        <a href="{{ path('vehicle_edit', { 'id': entity.id }) }}">Modifier</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('vehicle_new') }}">
                Nouveau véhicule
            </a>
        </li>
    </ul>
    {% endblock %}
